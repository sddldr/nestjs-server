generator client {
  provider      = "prisma-client-js"
  moduleFormat  = "cjs"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// 用户表
model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  password   String
  name       String?   // 可选昵称，便于扩展
  role       Role      @default(USER)
  projects   Project[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@index([email])
}

// 枚举：用户角色
enum Role {
  USER
  ADMIN
}

// 项目表
model Project {
  id          Int        @id @default(autoincrement())
  product     String
  price       Float
  number      Int
  status      ProjectStatus @default(ACTIVE)
  description String?    // 可选描述，方便未来功能扩展
  ownerId     Int?
  owner       User?       @relation(fields: [ownerId], references: [id])
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([ownerId])
  @@index([status])
}

// 枚举：项目状态
enum ProjectStatus {
  ACTIVE
  INACTIVE
  DELETED
}